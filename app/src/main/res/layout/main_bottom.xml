<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="#f5f5f5"
              android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_main_movie"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_main_movie"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/yd"/>

        <TextView
            android:id="@+id/tv_main_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="电影"
            android:textColor="@color/home_back_unselected"
            android:textSize="11sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_cinema"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_main_cinema"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/y6"/>

        <TextView
            android:id="@+id/tv_main_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="影院"
            android:textColor="@color/home_back_unselected"
            android:textSize="11sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_found"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_main_found"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/y8"/>

        <TextView
            android:id="@+id/tv_main_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="发现"
            android:textColor="@color/home_back_unselected"
            android:textSize="11sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_main_me"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/yb"/>

        <TextView
            android:id="@+id/tv_main_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="我的"
            android:textColor="@color/home_back_unselected"
            android:textSize="11sp"/>


    </LinearLayout>


</LinearLayout>